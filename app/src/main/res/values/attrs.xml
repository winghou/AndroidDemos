<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressView">
        <attr name="pv_progress" format="float"/>
        <attr name="pv_max" format="float"/>
        <attr name="pv_textSize" format="dimension"/>
        <attr name="pv_textColor" format="color"/>
        <attr name="pv_thickness" format="dimension"/>
        <attr name="pv_startAngle" format="float"/>
        <attr name="pv_sweepAngle" format="float"/>
        <attr name="pv_unreachedColor" format="color"/>
        <attr name="pv_asCircle" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="DialProgressView">
        <attr name="dpv_progress" format="float"/>
        <attr name="dpv_max" format="float"/>
        <attr name="dpv_startAngle" format="float"/>
        <attr name="dpv_sweepAngle" format="float"/>
        <attr name="dpv_thickness" format="dimension"/>
        <attr name="dpv_textSize" format="dimension"/>
        <attr name="dpv_textColor" format="color"/>
        <attr name="dpv_outerRadiusThickness" format="dimension"/>
        <attr name="dpv_outerRadiusColor" format="color"/>
        <attr name="dpv_innerRadiusThickness" format="dimension"/>
        <attr name="dpv_innerRadiusColor" format="color"/>
        <attr name="dpv_markerLength" format="dimension"/>
        <attr name="dpv_markerWidth" format="dimension"/>
        <attr name="dpv_markerColor" format="color"/>
        <attr name="dpv_markerStepSize" format="float"/>
        <attr name="dpv_pointerOffset" format="dimension"/>
        <attr name="dpv_pointer" format="reference"/>
        <attr name="dpv_indicator" format="reference"/>
    </declare-styleable>

    <declare-styleable name="LockPatternView">
        <!-- Aspect to use when drawing LockPatternView. Choices are "square"(default), "lock_width"
             or "lock_height" -->
        <attr name="lpv_aspect" format="string"/>
        <!-- Color to use when drawing LockPatternView paths. -->
        <attr name="lpv_pathColor" format="color|reference"/>
        <!-- The regular pattern color -->
        <attr name="lpv_regularColor" format="color|reference"/>
        <!-- The error color -->
        <attr name="lpv_errorColor" format="color|reference"/>
        <!-- The success color -->
        <attr name="lpv_successColor" format="color|reference"/>

        <attr name="lpv_dotSize" format="dimension|reference"/>

        <attr name="lpv_activeDotSize" format="dimension|reference"/>

        <attr name="lpv_pathWidth" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="AdapterGridLayout">
        <attr name="divider"/>
    </declare-styleable>

    <declare-styleable name="TimelineView">
        <attr name="tl_lineWidth" format="dimension|reference"/>
        <attr name="tl_lineColor" format="color|reference"/>
        <attr name="tl_indicatorSize" format="dimension|reference"/>
        <attr name="tl_indicatorColor" format="color|reference"/>
        <attr name="tl_indicatorPadding" format="dimension|reference"/>
        <attr name="tl_lineStyle" format="enum">
            <enum name="both" value="0"/>
            <enum name="top" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="none" value="-1"/>
        </attr>
    </declare-styleable>

    <attr name="cg_minCheckedCount" format="integer|reference"/>
    <attr name="cg_maxCheckedCount" format="integer|reference"/>

    <declare-styleable name="CompoundGroup">
        <attr name="cg_minCheckedCount"/>
        <attr name="cg_maxCheckedCount"/>
    </declare-styleable>

    <declare-styleable name="ToggleGroup">
        <attr name="cg_minCheckedCount"/>
        <attr name="cg_maxCheckedCount"/>
    </declare-styleable>

    <declare-styleable name="BadgeRadioButton">
        <attr name="brb_clipToPadding" format="boolean|reference"/>
        <attr name="brb_radius" format="dimension|reference"/>
        <attr name="brb_rightMargin" format="dimension|reference"/>
        <attr name="brb_topMargin" format="dimension|reference"/>
        <attr name="brb_visible" format="boolean|reference"/>
        <attr name="brb_color" format="color|reference"/>
    </declare-styleable>
</resources>